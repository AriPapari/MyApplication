<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_effect"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gecaj.arianit.myapplication.effect.Effect">


    <WebView  xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/webview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" >

    </WebView>

    <ListView
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/colorList"
        android:divider="@color/transparent"
        android:layout_height="100dp" />

    <Button
        android:text="Send Request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:id="@+id/button4"
        android:onClick="sendRequest" />

    <Button
        android:text="New Color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button5"
        android:layout_alignBottom="@+id/colorList"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="startColorpicker"
        android:background="#a5ffffff" />

    <ListView
        android:layout_width="match_parent"
        android:layout_below="@+id/colorList"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/effectColors"
        android:layout_marginTop="10dp"
        android:layout_height="100dp" />
    <TextView
        android:text="Brightness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/whiteBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView3" />
    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/whiteBar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:max="255" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/speedBar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:max="100" />

    <TextView
        android:text="Speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/speedBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView2" />

    <ListView
        android:layout_width="match_parent"
        android:layout_below="@+id/effectColors"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/effectListView"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="60dp" />

    <TextView
        android:text="Response here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_below="@+id/effectListView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
